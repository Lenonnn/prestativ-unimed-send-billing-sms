<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core"
                         >
    <Dialog
        closeOnNavigation="true"
        contentHeight="90%"
        contentWidth="90%"
        draggable="false"
        escapeHandler=""
        horizontalScrolling="true"
        icon="sap-icon://appointment"
        resizable="true"
        showHeader="true"
        state="Information"
        stretch="false"
        title="Agendamento de envio de SMS"
        titleAlignment="Center"
        type="Standard"
        verticalScrolling="true"
    >
        <buttons class="sapUiMediumMarginEnd">
            <Button id="btnSend" icon="sap-icon://paper-plane" text="{i18n>btnSend}" press="onSendSMSToSchedule" enabled="true" />
            <Button id="btnExit" icon="sap-icon://decline" text="{i18n>btnExit}" press="onExit" />
        </buttons>

        <VBox direction="Column">
            <items>
                <VBox alignItems="Start"  class="sapUiTinyMarginTop" width="100%">
                    <items>
                        <FlexBox justifyContent="Center" alignContent="SpaceBetween" width="100%">

                            <!-- Conteúdo do primeiro VBox -->

                            <VBox alignItems="Start" class="sapUiLargeMargin" height="auto"  width="100%">
                                <Label labelFor="rbg1" text="Tipo de envio" />
                                <RadioButtonGroup id="rbg1" columns="2" valueState="Information" width="15rem" >
                                    <RadioButton id="RB1" text="Agendado" select="onRBChange" />
                                    <RadioButton id="RB2" text="Imediato" select="onRBChange" />
                                </RadioButtonGroup>
                            </VBox>

                            <VBox alignItems="Start" class="sapUiLargeMargin" height="auto"  width="100%">
                                <Label text="Informe data para agendamento" labelFor="GroupA" />
                                <DatePicker id="iptDate" placeholder="Informe data de envio desejada" width="20rem" />
                            </VBox>

                            <VBox alignItems="Start" class="sapUiLargeMargin" height="auto"  width="100%">
                                <Label text="Identificação" labelFor="GroupA" />
                                <Input id="iptVal" value="" placeholder="Digite uma identificação para a mensagem" width="20rem" />
                            </VBox>


                        </FlexBox>
                    </items>
                </VBox>

                <VBox direction="Row" width="100%">
                <FlexBox justifyContent="End" alignContent="SpaceAround" width="100%">
                    <Toolbar id="toolbar" width="90%" height="auto" class="sapUiSmallMarginEnd">
                        <content>
                            <Input id="inputFilter" placeholder="Filtre Mensagens SMS" class="sapUiSmallMarginEnd" width="300px" />
                            <Button id="idStartSMS"  
                                    text="Inicio"
                                    textDirection="LTR"
                                    type="Emphasized"
                                    class="sapUiSmallMarginEnd"
                                    width="70px" /> 
                        </content>
                    </Toolbar>
                 </FlexBox>
                </VBox>

                <VBox alignItems="Center"   alignContent="Center" class="sapUiTinyMarginTop" width="100%">
                    <Table id="table" headerText="Mensagens" alternateRowColors="true" footerText="Lista de SMS cadastrados" class="sapUiLargeMargin sapUiTinyMarginTop" items="{path: '/data'}" width="90%">
                       
                        <columns>
                            <Column>
                            <Text text="ID SMS"/>
                            </Column>

                            <Column>
                            <Text text="Texto SMS"/>
                            </Column>

                        </columns>

                        <items>
                            <ColumnListItem>
                            <cells>
                                <Text text="IDSMS"/>
                                <Text text="TextoSMS"/>
                            </cells>
                            </ColumnListItem>
                        </items>
                    
                    </Table>
                
                </VBox>
            </items>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
