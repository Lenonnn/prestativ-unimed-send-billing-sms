<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">

    <Dialog
        closeOnNavigation="true"
        contentHeight="60%"
        contentWidth="60%"
        draggable="false"
        escapeHandler=""
        horizontalScrolling="true"
        icon="sap-icon://action-settings"
        resizable="true"
        showHeader="true"
        state="Information"
        stretch="false"
        title="Mensagem SMS"
        titleAlignment="Center"
        type="Standard"
        verticalScrolling="true"
    >
        <buttons class="sapUiMediumMarginEnd">
            <Button id="btnSave" text="{i18n>btnSave}" icon="sap-icon://save" press="onSaveSMS" type="Accept" />
            <Button id="btnExitSMSDetails" text="{i18n>btnExitSave}" icon="sap-icon://decline" press="onExitSMSDetails" type="Reject" />
        </buttons>

        <VBox direction="Inherit"  >
        <Input  autocomplete="true"
                description="Insira uma descrição como tipo de mensagem"
                enableSuggestionsHighlighting="true"
                fieldWidth="50%"
                filterSuggests="true"
                maxLength="20"
                maxSuggestionWidth="20"
                selectedKey="empty string"
                showSuggestion="false"
                showTableSuggestionValueHelp="true"
                showValueHelp="false"
                startSuggestion="1"
                suggestionRowValidator="empty string"
                textFormatMode="Value"
                textFormatter="empty string"
                type="Text"
                valueHelpIconSrc="sap-icon://value-help"
                valueHelpOnly="false"
                valueLiveUpdate="false" >

            <suggestionColumns>
                
            </suggestionColumns>
            <suggestionItems>
            </suggestionItems>
            <suggestionRows>
            </suggestionRows>
        </Input>
            
        </VBox>




    </Dialog>
    
</core:FragmentDefinition>
