            <items>
            <ColumnListItem>
                <cells>
                <Text text="{itemName}"/>
                <Text text="{itemQuantity}"/>
                </cells>
            </ColumnListItem>
            </items>
        </Table> -->

    </Dialog>
    
</core:FragmentDefinition>
