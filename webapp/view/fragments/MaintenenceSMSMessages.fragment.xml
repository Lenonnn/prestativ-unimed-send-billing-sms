<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        closeOnNavigation="true"
        contentHeight="90%"
        contentWidth="90%"
        draggable="false"
        escapeHandler=""
        horizontalScrolling="true"
        icon="sap-icon://action-settings"
        resizable="true"
        showHeader="true"
        state="Information"
        stretch="false"
        title="Manutenção e Cadastro de SMS"
        titleAlignment="Center"
        type="Standard"
        verticalScrolling="true"
    >
        <buttons class="sapUiMediumMarginEnd">
            <Button id="btnCreate" text="{i18n>btnCreate}" icon="sap-icon://add-document" press="onCreateSMS" type="Accept"/>
            <Button id="btnRead" text="{i18n>btnRead}" icon="sap-icon://display" press="onReadSMS" type="Ghost" />
            <Button id="btdUpdate" text="{i18n>btnUpdate}" icon="sap-icon://edit" press="onUpdateSMS" type="Ghost" />
            <Button id="btnDelete" text="{i18n>btnDelete}" icon="sap-icon://delete" press="onDeleteSMS" type="Reject" />
            <Button id="btnExitSMS" text="{i18n>btnExit}" icon="sap-icon://decline" press="onExitSMS" type="Ghost" />
        </buttons>

        <VBox direction="Column" />
